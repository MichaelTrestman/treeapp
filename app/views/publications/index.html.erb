<h1>Listing publications</h1>

<form id='publications search-form'>
  <h2>Search restrictions</h2>
  Title includes words:
  <input type='text' name='title'><br>
  Authors includes words:
  <input type='text' name='author'><br>
  publication date:
  <input type='text' name='date'><br>
  <input type="submit" value="Submit">
</form>


<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Date</th>
      <th colspan="3"></th>
    </tr>
  </thead>


  <tbody>
    <% @publications.each do |publication| %>
      <tr>
        <td><%= publication.title %></td>
        <td><%= publication.date %></td>
        <td><%= link_to 'Show', publication %></td>
        <td><%= link_to 'Edit', edit_publication_path(publication) %></td>
        <td><%= link_to 'Destroy', publication, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Publication', new_publication_path %>
