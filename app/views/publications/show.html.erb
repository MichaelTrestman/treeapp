
<div class='panel container-fluid'>
  <h1 class='font-libre'>Publication: <%= @publication.title %>  </h1>
  <h3> <%= @publication.date %> </h3>
  <p id="notice"><%= notice %></p>
  <p>
    <strong>Title:</strong>
    <%= @publication.title %>
  </p>

  <p>
    <strong>Date:</strong>
    <%= @publication.date %>
  </p>
  <p class='panel'>
    <a href="http://scholar.google.com/scholar?hl=en&q=<%= @publication.title %>"> google scholar link</a> | <a href='#'>full paper</a>
  </p>

</div>

<div class='row'>
  <div class='panel col-md-6'>
    <h2>Authors:</h2>
    <ul class='col-md-4 no-list-styles stripey'>
      <% @authors.each do |auth| %>
          <li class='hover-red'>
            <a href='/authors/<%= auth.id %>'>
              <%= auth.first_name %> <%= auth.last_name %>
            </a>
          </li>
      <% end %>

    </ul>
  </div>
  <div class='panel col-md-6'>
    <h2>Topics</h2>
    <ul class="" >
      <% @topics.each do |topic| %>
        <a href='/topics/<%= topic.id %>'>
          <li class='hover-red'>
            <%= topic.title %>
          </li>
        </a>
      <% end %>
    </ul>
  </div>
</div>


<% if session[:contributor_id] %>
  <%= link_to 'Edit', edit_publication_path(@publication) %> |
  <%= link_to 'Back', publications_path %>
<% end %>