<h1>Listing topics</h1>

<table class='table table-striped'>
  <thead>
    <tr>
      <th>Title</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @topics.each_with_index do |topic, i| %>
      <tr class=' <%=  i % 2 == 0 ? "" : "" %> '>

        <td><%= link_to topic.title, topic %></td>

      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Topic', new_topic_path %>
